{
  "name": "shelby-shop",
  "private": true,
  "author": "Shelllbyyyyy",
  "scripts": {
    "build:server": "pnpm --filter server build",
    "build:client": "pnpm --filter client build",
    "start:server": "pnpm --filter server start:migrate:prod",
    "start:client": "pnpm --filter client start",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@shelby/eslint-config": "workspace:*",
    "@shelby/typescript-config": "workspace:*",
    "@shelby/db": "workspace:*",
    "@shelby/api": "workspace:*",
    "@shelby/dto": "workspace:*",
    "prettier": "^3.1.1",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
